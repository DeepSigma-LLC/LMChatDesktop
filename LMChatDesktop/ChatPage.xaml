<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LMChatDesktop.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LMChatDesktop"
    xmlns:local2="using:LMChatDesktop.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Data template used: -->
        <!-- The data template is bound to a custom DataType called Message. -->
        <!-- Each Message object has a color and alignment assigned to it based on whether it was
sent or received, and those values are bound in the DataTemplate.-->
        <DataTemplate x:Key="MessageTemplate" x:DataType="local2:Message">
            <Grid Height="Auto" Margin="4" HorizontalAlignment="{x:Bind MessageAlignment}">
                <StackPanel MinHeight="75" MaxWidth="600" Padding="20, 0, 20, 0"
                            Background="{ThemeResource SystemControlForegroundChromeGrayBrush}"
                            CornerRadius="{StaticResource ControlCornerRadius}">
                    <TextBlock Text="{x:Bind MsgText}" Padding="0,10,0,0" FontSize="20" TextWrapping="WrapWholeWords"
                               Foreground="{ThemeResource SystemColorHighlightTextColor}"/>
                    <TextBlock Text="{x:Bind MsgDateTime}" Padding="0,0,0,10" FontSize="15"
                               Foreground="{ThemeResource SystemColorHighlightTextColor}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ResponseMessageTemplate" x:DataType="local2:Message">
            <Grid Margin="4" HorizontalAlignment="{x:Bind MessageAlignment}">
                <!-- same content; maybe different brush -->
                <StackPanel MinHeight="75" MaxWidth="600" Padding="10,0,0,10">
                    <TextBlock Text="{x:Bind MsgText}" Padding="0,10,0,0" FontSize="20" TextWrapping="WrapWholeWords"
                           Foreground="{ThemeResource SystemColorHighlightTextColor}"/>
                    <TextBlock Text="{x:Bind MsgDateTime}" Padding="0,0,0,10" FontSize="15"
                           Foreground="{ThemeResource SystemColorHighlightTextColor}"/>
                    <StackPanel Orientation="Horizontal">
                        <RatingControl AutomationProperties.Name="Simple RatingControl" IsClearEnabled="False" IsReadOnly="False" Caption="Evaluation"/>
                        <TextBlock Padding="10"/>
                        <CheckBox Content="Include in Chat History" IsChecked="True"/>
                        <AppBarButton Icon="Copy" Label="Copy" Click="CopyButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <local2:MessageItemTemplateSelector x:Key="MessageSelector" LeftTemplate="{StaticResource ResponseMessageTemplate}"
            RightTemplate="{StaticResource MessageTemplate}" />

    </Page.Resources>

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Padding="10" Orientation="Horizontal" >

                <SplitButton x:Name="modelProviders" Content="{x:Bind SelectedModelProviderItem.Label, Mode=OneWay}" HorizontalAlignment="Left">
                    <SplitButton.Flyout>
                        <Flyout />
                    </SplitButton.Flyout>
                </SplitButton>

                <TextBlock Padding="10"/>

                <SplitButton x:Name="mymodels"  Content="{x:Bind SelectedModelItem.Label, Mode=OneWay}" HorizontalAlignment="Left">
                    <SplitButton.Flyout>
                        <Flyout />
                    </SplitButton.Flyout>
                </SplitButton>

            </StackPanel>

            <Button Grid.Column="1" Style="{StaticResource AccentButtonStyle}" ToolTipService.ToolTip="Share">
                <SymbolIcon Symbol="Share"/>
            </Button>

        </Grid>
        

        <!-- Chat list 
        <ListView x:Name="InvertedListView"
              Grid.Row="1"
              ItemTemplate="{StaticResource MessageTemplate}"
              ScrollViewer.VerticalScrollMode="Auto"
              ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" VerticalAlignment="Bottom"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>-->

        <ListView  x:Name="InvertedListView" Grid.Row="1" ItemsSource="{x:Bind Messages}"
            ItemTemplateSelector="{StaticResource MessageSelector}" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" VerticalAlignment="Bottom"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

        </ListView>

        <!-- Input bar -->
        <Grid Grid.Row="2" Padding="8" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Click="ClearButton_Click" ToolTipService.ToolTip="Add Content">
                <SymbolIcon Symbol="Add"/>
            </Button>
            <TextBox x:Name="MessageInput" Grid.Column="1" TextWrapping="Wrap" PlaceholderText="Type your message here..." MaxHeight="160"/>
            <Button Grid.Column="2" Content="Send" Click="SendButton_Click" Style="{StaticResource AccentButtonStyle}"/>
           
        </Grid>

        <InfoBar x:Name="CopyInfoBar"
         Title="Copied!"
         Message="Message text has been copied to clipboard."
         IsOpen="False"
         Severity="Success"
         Margin="0,10,0,0"
         HorizontalAlignment="Center"
         VerticalAlignment="Top"
         Width="300"/>
    </Grid>
    
    

</Page>
